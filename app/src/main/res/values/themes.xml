<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatGPT" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="colorPrimary">#939293</item>
        <item name="colorPrimaryVariant">#0E0E0E</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">#00A4FF</item>
    </style>

    <style name="MyNavigationViewStyle" parent="Widget.Material3.NavigationView">
        <item name="itemShapeFillColor">@color/navigation_color</item>
    </style>

    <style name="textInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textSize">14sp</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="colorBackgroundFloating">@color/white</item>
        <item name="endIconTint">@color/black</item>

    </style>

    <style name="MyShapeAppearanceOverlay_FloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Surface">
        <item name="shapeAppearance">@style/MyShapeAppearance</item>
    </style>

    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">80%</item>
    </style>

    <style name="PremiumButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">#694C00</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>