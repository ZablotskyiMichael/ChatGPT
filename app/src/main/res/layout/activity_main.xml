<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Основной контент страницы -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <!-- Верхняя часть страницы с текстовым полем и меню -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                >
            <!-- Иконка с меню -->
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/chatsIcon"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:visibility="invisible"
                android:src="@drawable/menu_icon"
                android:elevation="2dp"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/chatGptIcon"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:visibility="visible"
                android:text="CatGPT"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:shadowRadius="8"
                android:shadowDy="4"
                android:shadowDx="4"
                android:shadowColor="@color/black"
                android:src="@drawable/baseline_menu_24"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/quantityToken"
                    android:layout_width="100dp"
                    android:layout_height="38dp"
                    android:visibility="visible"
                    android:text="5"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:shadowRadius="8"
                    android:shadowDy="4"
                    android:shadowDx="4"
                    android:shadowColor="@color/black"
                    android:background="@drawable/background_token"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/messagesLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/messagesRecyclerView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/catLogoWrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/catLogoImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                app:srcCompat="@drawable/main_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/startChatButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/background_button_start_chat"
                        android:paddingStart="40dp"
                        android:paddingEnd="40dp"
                        android:shadowColor="@color/black"
                        android:shadowDx="4"
                        android:shadowDy="4"
                        android:shadowRadius="10"
                        android:text="START CHAT"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />


                    <Button
                        android:id="@+id/startShowADS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button_start_chat"
                        android:paddingStart="40dp"
                        android:paddingEnd="40dp"
                        android:shadowColor="@color/black"
                        android:shadowDx="4"
                        android:shadowDy="4"
                        android:shadowRadius="10"
                        android:text="SHOW ADS"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toTopOf="@+id/buyPremiumChatButton"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/startChatButton" />

                    <Button
                        android:id="@+id/buyPremiumChatButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/background_button_premium_chat"
                        android:paddingStart="40dp"
                        android:paddingEnd="40dp"
                        android:shadowColor="@color/black"
                        android:shadowDx="4"
                        android:shadowDy="4"
                        android:shadowRadius="10"
                        android:text="Premium CHAT"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </LinearLayout>

        <!--<com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorSize="48dp"
            app:indicatorColor="@color/background"
            app:trackColor="@color/purple_700"
            app:trackThickness="4dp"
            android:indeterminate="true"
            app:indicatorInset="@dimen/cardview_default_elevation"
            app:showAnimationBehavior="none"
            app:hideAnimationBehavior="inward"
            android:layout_gravity="center"
            android:visibility="gone" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <!-- Текстовое поле для ввода текста -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputMessageLayout"
                android:layout_gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/sendMessage"
                android:textColorHint="@color/black"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/baseline_send_24"
                app:errorEnabled="true"
                android:visibility="gone"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxStrokeWidth="0.2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_gravity="bottom"
                    android:id="@+id/inputMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/sendMessage"
                    android:inputType="text"
                    android:textColor="#424242"
                    android:textColorHint="#9F9F9F"
                    android:visibility="gone"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Выдвижная панель меню -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header_navigation_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#303030"
        app:itemTextColor="@color/white"/>

</androidx.drawerlayout.widget.DrawerLayout>